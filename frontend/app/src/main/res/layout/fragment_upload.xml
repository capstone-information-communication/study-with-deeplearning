<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".workbook.fragment.UploadFragment">


    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/btn_upload"
        android:layout_width="193dp"
        android:layout_height="174dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_content_send" />

    <EditText
        android:hint="문제집 제목을 입력해주세요"
        android:id="@+id/et_title_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/make_workbooks_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="파일 전송하기 버튼"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload" />

    <EditText
        android:hint="문제집 설명을 입력해주세요"
        android:id="@+id/et_content_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title_send" />

</androidx.constraintlayout.widget.ConstraintLayout>