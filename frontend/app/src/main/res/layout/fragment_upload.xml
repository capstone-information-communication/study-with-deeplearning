<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".workbook.fragment.UploadFragment">


    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/btn_upload"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@color/background"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/pdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_content_send" />

    <EditText
        android:id="@+id/et_title_send"
        android:layout_width="288dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:hint="문제집 제목을 입력해주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/make_workbooks_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="파일 전송하기 버튼"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목 : "
        app:layout_constraintBottom_toBottomOf="@+id/et_title_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_title_send" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="설명 : "
        app:layout_constraintBottom_toBottomOf="@+id/et_content_send"
        app:layout_constraintEnd_toStartOf="@+id/et_content_send"
        app:layout_constraintTop_toTopOf="@+id/et_content_send"
        app:layout_constraintVertical_bias="0.466" />

    <EditText
        android:id="@+id/et_content_send"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:hint="문제집 설명을 입력해주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title_send" />

</androidx.constraintlayout.widget.ConstraintLayout>