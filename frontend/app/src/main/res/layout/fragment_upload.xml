<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".workbook.fragment.UploadFragment">


    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/btn_upload"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="88dp"
        android:background="@color/background"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/pdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_content_send" />

    <Button
        android:id="@+id/make_workbooks_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/radius"
        android:fontFamily="@font/nanum_b"
        android:text="파일전송"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload" />

    <EditText
        android:id="@+id/et_title_send"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/nanum_acl"
        android:gravity="center_horizontal"
        android:hint="문제집 제목을 입력해주세요"
        android:singleLine="true"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/nanum_b"
        android:text="제목"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/et_title_send"
        app:layout_constraintEnd_toEndOf="@+id/et_title_send"
        app:layout_constraintStart_toStartOf="@+id/et_title_send" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/nanum_b"
        android:text="설명"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/et_content_send"
        app:layout_constraintEnd_toEndOf="@+id/et_content_send"
        app:layout_constraintStart_toStartOf="@+id/et_content_send" />

    <EditText
        android:id="@+id/et_content_send"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nanum_acl"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:lines="1"
        android:hint="문제집 설명을 입력해주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title_send" />

</androidx.constraintlayout.widget.ConstraintLayout>